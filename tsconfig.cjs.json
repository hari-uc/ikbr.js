{
        "extends": "./tsconfig.base.json",
        "include": ["src/**/*.ts"],
        "exclude": ["node_modules", "dist"],
        "files": ["src/index.ts"],
        "compilerOptions": {
          "sourceMap": true,
          "allowJs": true,
          "preserveConstEnums": true,
          "moduleResolution": "Node",
          "target": "ES2017",
          "module": "CommonJS",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "importHelpers": true,
          "declaration": true,
          "declarationDir": "./dist/types",
          "forceConsistentCasingInFileNames": true,
          "outDir": "./dist/cjs",
          "baseUrl": "./src",
          "resolveJsonModule": true,
          "paths": {
            "@/*": ["*"]
          }
        }
      }